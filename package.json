{
  "name": "@servable/nextjs",
  "type": "module",
  "version": "0.0.0-development",
  "description": "",
  "author": {
    "name": "adoucoure",
    "email": "yelounak@gmail.com"
  },
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch --no-compress --format modern,cjs",
    "test_": "echo \"Error: no test specified\" && exit 1",
    "semantic-release": "semantic-release",
    "acp": "git add . && npm run commit && git push",
    "commit": "git-cz",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare_": "run-s build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:build": "run-s build",
    "test:lint": "eslint ."
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "_engineStrict": false,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/servable-core/nextjs"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "600 KB"
    },
    {
      "path": "dist/index.modern.js",
      "limit": "600 KB"
    },
    {
      "path": "dist/index.umd.js",
      "limit": "600 KB"
    }
  ],
  "keywords": [],
  "dependencies": {
    "cookies-next": "^2.0.4"
  },
  "peerDependencies": {
    "axios": "^1"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/gitlab": "^12.0.6",
    "@semantic-release/npm": "^11.0.0",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/jest": "^29.5.12",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^6.0.0",
    "jest": "^29.7.0",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "semantic-release": "^22",
    "size-limit": "^4.10.2"
  }
}